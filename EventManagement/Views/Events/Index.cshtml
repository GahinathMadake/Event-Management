@model IEnumerable<EventManagement.Models.Event>
@{
    ViewData["Title"] = "Events List";
}

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <h2 class="mb-3 mb-md-0">
            My Events
        </h2>
        <a href="@Url.Action("Create")" class="btn btn-primary px-4 py-2">
            <i class="bi bi-plus-circle me-2"></i>Create New Event
        </a>
    </div>

    <hr class="my-4">

    <!-- Features row -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border">
                <div class="card-body text-center p-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                        <i class="bi bi-lightning-charge-fill text-primary fs-3"></i>
                    </div>
                    <h4 class="card-title">Quick Setup</h4>
                    <p class="card-text text-muted">Create professional events in minutes with our intuitive wizard.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border">
                <div class="card-body text-center p-4">
                    <div class="bg-success bg-opacity-10 rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                        <i class="bi bi-people-fill text-success fs-3"></i>
                    </div>
                    <h4 class="card-title">Manage Guests</h4>
                    <p class="card-text text-muted">Send invites, track RSVPs, and manage attendees effortlessly.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border">
                <div class="card-body text-center p-4">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                        <i class="bi bi-graph-up-arrow text-info fs-3"></i>
                    </div>
                    <h4 class="card-title">Event Analytics</h4>
                    <p class="card-text text-muted">Get real-time insights into attendance and engagement.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-light p-4 p-md-5 rounded-3 border-start border-primary border-4 mb-4">
        <div class="text-center">
            <h3 class="mb-3">Ready to Create Your Event?</h3>
            <p class="lead mb-4">Start building your event in just a few clicks</p>
            <a href="@Url.Action("Create")" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-rocket-takeoff me-2"></i>Get Started Now
            </a>
        </div>
    </div>
</div>


