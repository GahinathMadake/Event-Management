@model EventManagement.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<h2 class="text-md text-center my-3">Create Event</h2>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-10 bg-white rounded-4 shadow d-flex p-0 overflow-hidden">

      <div class="col-md-6 d-none d-md-block position-relative bg-light">
        <!-- Image with fallback options -->
        <img src="@Url.Content("~/assets/event/create.avif")" 
            onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1505373877841-8d25f7d46678?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80'"
            class="w-100 h-100 object-fit-cover"
            alt="Event creation illustration"
            style="min-height: 100%; object-position: center;">
        
        <!-- Overlay text -->
        <div class="position-absolute bottom-0 start-0 text-white p-4" style="background: linear-gradient(transparent, rgba(0,0,0,0.7)); width: 100%;">
            <h4 class="fw-bold mb-2">Welcome to Puneri Mehfil</h4>
            <p class="mb-0">Organize your Events efficiently and effectively with us!</p>
        </div>
      </div>


      <!-- Right Form Section -->
      <div class="col-md-6 p-5">
        <div class="text-center mb-3">
          <h5 class="fw-bold">Welcome to Puneri Mehfil</h5>
        </div>

        <p class="text-center text-muted small">Create Event and organise efficiently...</p>

        <!-- Login Form -->
        <form asp-action="Create" method="post" class="p-3 rounded">
            <div class="form-group mb-3">
                <label class="form-label">Title</label>
                <input asp-for="Title" class="form-control form-control-sm" />
            </div>
            
            <div class="form-group mb-3">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control form-control-sm" rows="3"></textarea>
            </div>
            
            <div class="form-group mb-3">
                <label class="form-label">Date</label>
                <input asp-for="Date" type="date" class="form-control form-control-sm" />
            </div>
            
            <div class="form-group mb-3">
                <label class="form-label">Location</label>
                <input asp-for="Location" class="form-control form-control-sm" />
            </div>
            
            <div class="form-group mb-4">
                <label class="form-label">Capacity</label>
                <input asp-for="Capacity" type="number" class="form-control form-control-sm" />
            </div>
            
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-sm py-2">
                    Create Event
                </button>
            </div>
        </form>

      </div>

    </div>
  </div>
</div>
