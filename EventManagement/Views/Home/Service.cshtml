@{
    ViewData["Title"] = "Our Event Services";
    ViewData["ActivePage"] = "Services";

}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">@ViewData["Title"]</h1>
        <p class="lead text-muted">Comprehensive solutions for all your event needs</p>
    </div>

    <div class="row g-4">
        <!-- Event Registration Service -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-ticket-perforated text-primary fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Event Registration</h3>
                    </div>
                    <p class="card-text text-muted">
                        Streamlined online registration system with secure payment processing, attendee management, and real-time analytics.
                    </p>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><i class="bi bi-check-circle-fill text-primary me-2"></i> Custom registration forms</li>
                        <li class="mb-1"><i class="bi bi-check-circle-fill text-primary me-2"></i> QR code check-in</li>
                        <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Automated confirmation emails</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4">
                    <a href="#" class="btn btn-outline-primary w-100">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Event Publicity Service -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-megaphone text-success fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Event Publicity</h3>
                    </div>
                    <p class="card-text text-muted">
                        Complete marketing solutions to maximize your event visibility across digital and traditional channels.
                    </p>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i> Social media campaigns</li>
                        <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i> Email marketing</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Press release distribution</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4">
                    <a href="#" class="btn btn-outline-success w-100">Get Started</a>
                </div>
            </div>
        </div>

        <!-- Event Staffing Service -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-people text-warning fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Event Staffing</h3>
                    </div>
                    <p class="card-text text-muted">
                        Professional event staff including registration assistants, ushers, security, and technical support personnel.
                    </p>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><i class="bi bi-check-circle-fill text-warning me-2"></i> Trained professionals</li>
                        <li class="mb-1"><i class="bi bi-check-circle-fill text-warning me-2"></i> Flexible staffing options</li>
                        <li><i class="bi bi-check-circle-fill text-warning me-2"></i> Background-checked personnel</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4">
                    <a href="#" class="btn btn-outline-warning w-100">Request Staff</a>
                </div>
            </div>
        </div>

        <!-- Additional Services -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-gear text-info fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Event Logistics</h3>
                    </div>
                    <p class="card-text text-muted">
                        End-to-end event planning including venue selection, equipment rental, and transportation coordination.
                    </p>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4">
                    <a href="#" class="btn btn-outline-info w-100">View Options</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-graph-up text-danger fs-4"></i>
                        </div>
                        <h3 class="h5 mb-0">Post-Event Analytics</h3>
                    </div>
                    <p class="card-text text-muted">
                        Detailed reports and insights to measure your event's success and attendee engagement.
                    </p>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4">
                    <a href="#" class="btn btn-outline-danger w-100">See Samples</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #6f42c1;
    }
    .text-purple {
        color: #6f42c1;
    }
    .btn-outline-purple {
        color: #6f42c1;
        border-color: #6f42c1;
    }
    .btn-outline-purple:hover {
        color: #fff;
        background-color: #6f42c1;
        border-color: #6f42c1;
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>

@section Scripts {
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}